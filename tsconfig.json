{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "rootDir": "./",
    "outDir": "build",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "frontend"
  ]
}